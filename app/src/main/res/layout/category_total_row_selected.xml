<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/button_material_light"
    android:descendantFocusability="blocksDescendants">

    <include
        android:id="@+id/categoryTotalRow"
        layout="@layout/category_total_row" />

    <ImageButton
        android:id="@+id/deleteCategoryBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/categoryTotalRow"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/delete_category"
        android:src="@drawable/ic_delete_24" />

    <ImageButton
        android:id="@+id/editCategoryBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/categoryTotalRow"
        android:layout_toStartOf="@id/deleteCategoryBtn"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/edit_category"
        android:src="@drawable/ic_edit_24" />

</RelativeLayout>