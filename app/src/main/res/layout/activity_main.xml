<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_alignParentStart="true"
            android:id="@+id/spinnerDateFilter"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge">
        </Spinner>

        <TextView
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/spinnerDateFilter"
            android:id="@+id/lblDateFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_from_date"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btnShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/txt_btn_show"/>
    </RelativeLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">

        <TableRow
            android:id="@+id/tableRowQiwi"
            style="@style/tableRow">

            <TextView
                android:id="@+id/lblQiwi"
                android:text="@string/txt_qiwi"
                style="@style/tableItem"/>

            <TextView
                android:id="@+id/lblQiwiValue"
                style="@style/tableItem"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowProducts"
            style="@style/tableRow">

            <TextView
                android:id="@+id/lblProducts"
                android:text="@string/txt_products"
                style="@style/tableItem"/>

            <TextView
                android:id="@+id/lblProductsValue"
                style="@style/tableItem"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowSport"
            style="@style/tableRow">

            <TextView
                android:id="@+id/lblSport"
                android:text="@string/txt_sport"
                style="@style/tableItem"/>

            <TextView
                android:id="@+id/lblSportValue"
                style="@style/tableItem"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowCashWithdraw"
            style="@style/tableRow">

            <TextView
                android:id="@+id/lblCashWithdraw"
                android:text="@string/txt_cash_withdraw"
                style="@style/tableItem"/>

            <TextView
                android:id="@+id/lblCashWithdrawValue"
                style="@style/tableItem"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowOther"
            style="@style/tableRow">

            <TextView
                android:id="@+id/lblCashOther"
                android:text="@string/txt_other"
                style="@style/tableItem"/>

            <TextView
                android:id="@+id/lblOtherValue"
                style="@style/tableItem"/>
        </TableRow>

        </TableLayout>

</LinearLayout>